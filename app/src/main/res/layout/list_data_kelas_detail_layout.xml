<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/listview_ID_dtl_kls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="ID Detail Kelas"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/listview_Nama_Materi_dtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Nama Materi"
            android:layout_weight="9"
            android:textSize="18sp"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/listview_jumlah_pst_dtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Jumlah Peserta"
            android:layout_weight="9"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/listview_tglmulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="ID Detail Kelas"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/listviewid_kls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Nama Materi"
            android:layout_weight="9"
            android:textSize="18sp"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/listview_namains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Jumlah Peserta"
            android:layout_weight="9"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:padding="8dp"/>
</LinearLayout>

</LinearLayout>